def bisection(f, a, b, e=10**-4, N = 100):
  x_a = a
  x_b = b
  
  if f(x_a)*f(x_b) >= 0:
    print("Use another guess range")
    return None
  
  for n in range (1,N):
    x_m = (x_a + x_b)/2
    if abs(f(x_m)) < e:
      return x_m, n
    else:
      if f(x_a)*f(x_m) < 0:
        x_b = x_m
      elif f(x_b)*f(x_m) < 0:
        x_a = x_m
  return x_m, n


f = lambda x: x**3+x**2-3
a = 0.25
b = 1.75

x_root, iteration = bisection(f,a,b)
print('Result : ', x_root)
print('In %d iteration' %iteration)

import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
%matplotlib inline
sns.set()

f = lambda x: x**3+x**2-3
a = 0.5
b = 1.75
x_a = 0.75
x_b = 1.5
x_c = 1.17455941029298

