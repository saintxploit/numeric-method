fig = plt.figure(figsize=(10,6))
ax  = plt.axes(xlim=(a,b),ylim=(min(f(x)),max(f(x))))

plt.yticks([],[])

ax.spines["bottom"].set_position(("data", 0))
ax.spines["bottom"].set_color('black')
